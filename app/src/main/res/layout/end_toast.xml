<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/end_toastLayout">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/end_toastBG"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/end_portal_image"
        >
    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/end_toastBG"
        app:layout_constraintLeft_toLeftOf="@id/end_toastBG"
        app:layout_constraintRight_toRightOf="@id/end_toastBG"
        app:layout_constraintBottom_toBottomOf="@id/end_toastBG"
        android:fontFamily="@font/arcadepix"
        android:textColor="@color/white"
        android:text="@string/toEnd"
        >
    </TextView>



</androidx.constraintlayout.widget.ConstraintLayout>