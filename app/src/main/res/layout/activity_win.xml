<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WinActivity"
    android:background="@drawable/main_bg">

    <ImageView
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:src="@drawable/win"
        android:id="@+id/youWin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.4">

    </ImageView>

    <ImageView
        android:layout_width="250dp"
        android:layout_height="170dp"
        android:src="@drawable/steve_happy"
        android:id="@+id/playerWin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.13"
        android:shadowDx="8"
        android:shadowDy="8"
        android:shadowRadius="20"
        android:shadowColor="@color/white">

    </ImageView>

    <ImageView
        android:layout_width="360dp"
        android:layout_height="130dp"
        android:src="@drawable/thanks"
        android:id="@+id/winMessage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.57">

    </ImageView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/playAgainWin"
        android:background="@drawable/button"
        android:backgroundTint="@color/green"
        android:text="@string/playAgain"
        android:padding="12dp"
        android:textSize="23sp"
        android:fontFamily="@font/arcadepix"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.73"
        >
    </Button>


</androidx.constraintlayout.widget.ConstraintLayout>