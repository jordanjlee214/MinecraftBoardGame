<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/move_toastLayout"
    tools:context=".DiceFragment">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:id="@+id/move_toastBG"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/small_toast"
        >
    </ImageView>

    <TextView
        android:layout_width="90sp"
        android:layout_height="wrap_content"
        android:text="@string/moves"
        android:fontFamily="@font/lcd_solid"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:drawableStart="@drawable/dice_icon"
        app:layout_constraintTop_toTopOf="@id/move_toastBG"
        app:layout_constraintLeft_toLeftOf="@id/move_toastBG"
        app:layout_constraintRight_toRightOf="@id/move_toastBG"
        app:layout_constraintBottom_toBottomOf="@id/move_toastBG"
        android:id="@+id/move_toastText"
        android:textSize="35sp"
android:paddingStart="10sp"
        android:drawablePadding="10sp"

        >


    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>